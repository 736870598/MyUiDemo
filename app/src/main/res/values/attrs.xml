<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--name为声明的属性集合，可以随意取，最好是和自定义View一样的名称，这样方便管理-->
    <declare-styleable name="PraiseView">
        <!-- 声明属性，名称为like_number，取值是整形-->
        <attr name="praise_number" format="integer"/>
        <attr name="praise_number_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="MyEditText">
        <attr name="show_icon" format="reference"  />
        <attr name="hide_icon" format="reference"  />
        <attr name="no_focus_show_icon" format="boolean"  />
    </declare-styleable>
</resources>
